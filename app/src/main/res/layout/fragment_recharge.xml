<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beijing"
    android:orientation="vertical"
    tools:context="com.just.rebate.ui.activity.RechargeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/beijing"
        android:orientation="vertical">

        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="75dp"-->
        <!--android:background="@drawable/shape_color"-->
        <!--android:orientation="horizontal">-->

        <!--<ImageView-->
        <!--android:id="@+id/bakc_Recharge"-->
        <!--android:layout_width="12dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_marginLeft="@dimen/default_margin"-->
        <!--android:layout_marginTop="15dp"-->
        <!--android:src="@mipmap/leftarrow"-->
        <!--android:tint="@color/colorWhite" />-->

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginLeft="@dimen/default_margin"-->
        <!--android:layout_marginTop="30dp"-->
        <!--android:gravity="center"-->
        <!--android:text="充值"-->
        <!--android:textColor="@color/text_color_white"-->
        <!--android:textSize="@dimen/text_size_title_xl" />-->
        <!--</LinearLayout>-->

        <com.just.rebate.wedget.MyTitleBar
            android:id="@+id/title"
            style="@style/TitleBar"
            app:titleText="充值" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin_top"
            android:layout_marginRight="@dimen/default_margin"
            android:background="@drawable/shape_corner"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingLeft="@dimen/padding_left"
                android:paddingTop="@dimen/padding_content"
                android:text="积分充值"
                android:textColor="@color/text333"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|bottom"
                    android:paddingRight="@dimen/padding_right"
                    android:paddingBottom="5dp"
                    android:text="用户账号"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/text_size_content" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:background="@null"
                    android:paddingTop="5dp"
                    android:paddingRight="@dimen/padding_right"
                    android:text="1357144"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/text_size_content_ss" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin_top"
            android:layout_marginRight="@dimen/default_margin"
            android:background="@drawable/shape_corner"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_left"
                android:paddingTop="@dimen/padding_top"
                android:text="充值金额"
                android:textColor="@color/text333"
                android:textSize="@dimen/text_size_content_s" />


            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/id_flowlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_top"
                android:paddingTop="7dp"
                android:paddingBottom="20dp"
                app:max_select="1"
                app:tag_gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_top"
                android:layout_marginBottom="@dimen/padding_left"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_top"
                    android:layout_marginBottom="@dimen/padding_left"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/padding_left"
                            android:text="请选择支付方式"
                            android:textColor="@color/text333"
                            android:textSize="@dimen/text_size_content_s" />

                        <ImageView
                            android:id="@+id/jiantou"
                            android:layout_width="11dp"
                            android:layout_height="11dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/bottomarrow" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_margin_top"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:id="@+id/radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/radio1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/default_margin"
                                android:drawableLeft="@mipmap/yhkzhifu"
                                android:drawablePadding="8dp"
                                android:text="银行卡支付"
                                android:textColor="@color/text333"
                                android:textSize="@dimen/text_size_content_s" />

                            <RadioButton
                                android:id="@+id/radio2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/default_margin"
                                android:layout_marginTop="@dimen/default_margin_top"
                                android:drawableLeft="@mipmap/zfb"
                                android:drawablePadding="8dp"
                                android:text="支付宝支付"
                                android:textColor="@color/text333"
                                android:textSize="@dimen/text_size_content_s" />

                            <RadioButton
                                android:id="@+id/radio3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/default_margin"
                                android:layout_marginTop="@dimen/default_margin_top"
                                android:drawableLeft="@mipmap/vxzhifu"
                                android:drawablePadding="8dp"
                                android:text="微信支付"
                                android:textColor="@color/text333"
                                android:textSize="@dimen/text_size_content_s" />

                        </RadioGroup>

                        <LinearLayout
                            android:id="@+id/CardChoose"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/default_margin"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="银行卡:"
                                android:gravity="center"
                                android:textColor="@color/text333"
                                android:textSize="@dimen/text_size_content" />

                            <TextView
                                android:id="@+id/Text_for_Bankcard"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_marginLeft="@dimen/default_margin"
                                android:background="@drawable/textview_border"
                                android:drawableRight="@mipmap/bottomarrow"
                                android:drawablePadding="8dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:text="**** **** **** **** 2352" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/Recharge"
            android:layout_width="200dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape_corner_xl"
            android:text="确认支付"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_title_xl" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:paddingLeft="@dimen/padding_left"
            android:text="充值说明:"
            android:textColor="@color/text999"
            android:textSize="@dimen/text_size_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:paddingLeft="@dimen/padding_left"
            android:text="1.充值的积分仅在我要返利APP内使用"
            android:textColor="@color/text999"
            android:textSize="@dimen/text_size_content_s" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="@dimen/padding_left"
            android:text="2.充值积分后不退不换，请仔细确认后支付"
            android:textColor="@color/text999"
            android:textSize="@dimen/text_size_content_s" />
    </LinearLayout>
</ScrollView>