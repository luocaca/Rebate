<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/beijing"
    tools:context=".ui.activity.FailureToPayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:background="@drawable/shape_color"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:tint="@color/color_white">

            <ImageView
                android:id="@+id/Iv_Back"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/default_margin"
                android:src="@mipmap/retun1" />

            <EditText
                android:layout_width="235dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:background="@drawable/shape_corner_x"
                android:drawableLeft="@mipmap/search2"
                android:hint="输入订单号"
                android:padding="8dp"
                android:textColorHint="@color/color_Grid"
                android:textSize="@dimen/text_size_content_s" />

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="@dimen/default_margin"
                android:src="@mipmap/chat2" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="-30dp"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin_top"
        android:background="@drawable/shape_corner"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/FailureToPay_to_Order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@mipmap/zuijxiadan"
                android:drawablePadding="7dp"
                android:paddingTop="3.5dp"
                android:paddingBottom="7dp"
                android:text="最近下单"
                android:textColor="@color/text666"
                android:textSize="@dimen/text_size_content_s" />

            <TextView
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/FailureToPay_to_Track"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@mipmap/genzong"
                android:drawablePadding="7dp"
                android:paddingTop="3.5dp"
                android:paddingBottom="7dp"
                android:text="跟踪处理"
                android:textColor="@color/text666"
                android:textSize="@dimen/text_size_content_s" />

            <TextView
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/FailureToPay_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="3.5dp"
                android:drawableTop="@mipmap/zuijin"
                android:drawablePadding="7dp"
                android:paddingBottom="7dp"
                android:text="最近到账"
                android:textColor="@color/text666"
                android:textSize="@dimen/text_size_content_s" />

            <TextView
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/FailureToPay_to_Invalid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:drawablePadding="7dp"
                android:drawableTop="@mipmap/wuxiao"
                android:paddingTop="3.5dp"
                android:paddingBottom="7dp"
                android:text="无效订单"
                android:textColor="@color/text666"
                android:textSize="@dimen/text_size_content_s" />

        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="45dp"
        android:layout_gravity="center"
        android:src="@mipmap/bigwarning"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="支付失败"
        android:layout_marginTop="@dimen/default_margin"
        android:textSize="@dimen/text_size_title_xl"
        android:textColor="@color/text333"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="160dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="账户积分不足，请"
            android:textColor="@color/text333"
            android:textSize="@dimen/text_size_content_ss" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="充值"
            android:textColor="@color/text_color_Pink"
            android:textSize="@dimen/text_size_content_ss"
            />


    </LinearLayout>



</LinearLayout>