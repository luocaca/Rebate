<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/shape_corner"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/shape_corner_left_top_right_top">
        <TextView
            android:id="@+id/OrderPlatformName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="淘宝"
            android:textSize="@dimen/text_size_title"
            android:paddingLeft="@dimen/padding_left"
            android:textColor="@color/text333"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="10dp"
            />
        <TextView
            android:id="@+id/PaymentExpried"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="2019-07-31"
            android:textSize="@dimen/text_size_content_ss"
            android:textColor="@color/text999"
            android:gravity="center|left"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/rich_moeny"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:gravity="right|center"
            android:layout_weight="1"
            android:text="预估返利2.62元"
            android:textColor="@color/color_red"
            android:paddingRight="@dimen/padding_right"
            android:textSize="@dimen/text_size_title"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/underline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corner_left_bottom_right_bottom"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/CheckBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"></CheckBox>

        <include layout="@layout/order_content_includ" />
    </LinearLayout>
</LinearLayout>