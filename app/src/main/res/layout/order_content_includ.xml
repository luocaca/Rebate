<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/order_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/white_text_color"
        android:padding="4dp"
        android:layout_marginLeft="2dp"
        android:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_name"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingRight="@dimen/padding_right"
            android:text="破洞牛仔裤宽松九薄款哈伦裤"
            android:textColor="@color/text666"
            android:textSize="@dimen/text_size_content_s" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/shape_corner_text_bg"
            android:drawableRight="@mipmap/bottomerrow2"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginLeft="-2dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="灰色破洞；29【80-100斤】"
            android:textColor="@color/text666"
            android:textSize="@dimen/text_size_content_s" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="￥148.00"
                android:textColor="@color/color_red"
                android:textSize="@dimen/default_oval"
                android:textStyle="bold" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="-"
                android:textSize="@dimen/text_size_content" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:background="@drawable/textview_border"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="1"
                android:textSize="@dimen/text_size_content_s" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="+"
                android:textSize="@dimen/text_size_content" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
