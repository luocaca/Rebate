<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beijing"
    android:orientation="vertical"
    tools:context="com.just.rebate.ui.activity.ArrivalAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="@drawable/shape_color"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_trck"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/default_margin"
                android:src="@mipmap/retun1"
                android:tint="@color/color_white" />

            <EditText
                android:layout_width="235dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:background="@drawable/shape_corner_x"
                android:drawableLeft="@mipmap/search2"
                android:hint="输入订单号"
                android:padding="8dp"
                android:textColorHint="@color/color_Grid"
                android:textSize="@dimen/text_size_content_s" />

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="@dimen/default_margin"
                android:src="@mipmap/chat2" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="-30dp"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginBottom="1dp"
        android:background="@drawable/shape_corner"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/Track_to_Order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@mipmap/zuijxiadan"
                android:drawablePadding="7dp"
                android:paddingTop="3.5dp"
                android:paddingBottom="7dp"
                android:text="最近下单"
                android:textColor="@color/text666"
                android:textSize="@dimen/text_size_content_s" />

            <TextView
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@mipmap/genzong"
                android:drawablePadding="7dp"
                android:paddingTop="3.5dp"
                android:paddingBottom="7dp"
                android:text="跟踪处理"
                android:textColor="@color/text666"
                android:textSize="@dimen/text_size_content_s" />

            <TextView
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/Track_to_ArrivalAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="3.5dp"
                android:drawableTop="@mipmap/zuijin"
                android:drawablePadding="7dp"
                android:paddingBottom="7dp"
                android:text="最近到账"
                android:textColor="@color/text666"
                android:textSize="@dimen/text_size_content_s" />

            <TextView
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/Track_to_Ivalid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:drawablePadding="7dp"
                android:drawableTop="@mipmap/wuxiao"
                android:paddingTop="3.5dp"
                android:paddingBottom="7dp"
                android:text="无效订单"
                android:textColor="@color/text666"
                android:textSize="@dimen/text_size_content_s" />

        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:background="@drawable/shape_corner_grad">

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>