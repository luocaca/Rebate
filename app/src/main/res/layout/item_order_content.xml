<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_bottom_line"
    android:orientation="vertical"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"


        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:adjustViewBounds="true"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:src="@mipmap/butto" />

        <ImageView
            android:id="@+id/order_iv"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginLeft="@dimen/default_margin"
            android:background="@color/beijing"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/default_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_name"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingRight="@dimen/padding_right"
                android:text="破洞牛仔裤宽松九分裤2019夏季新款韩版薄款哈伦裤"
                android:textColor="@color/text666"
                android:textSize="@dimen/text_size_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/shape_corner_ss_grad"
                android:drawableRight="@mipmap/bottomarrow"
                android:padding="4dp"
                android:text="灰色破洞；29【80-100斤】"
                android:textColor="@color/text999"
                android:textSize="@dimen/text_size_content" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="@dimen/default_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_weight="1"
            android:layout_marginLeft="140dp"
            android:text="￥148.00"
            android:textColor="@color/text666"
            android:textSize="@dimen/text_size_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/textview_border_top_bottom_left_"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="-"
            android:textSize="@dimen/text_size_content_s" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/textview_border"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="1"
            android:textSize="@dimen/text_size_content_s" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="23dp"
            android:layout_marginRight="@dimen/default_margin"
            android:background="@drawable/textview_border_top_bottom_right_"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="+"
            android:textSize="@dimen/text_size_content_s" />

    </LinearLayout>

</LinearLayout>
