<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:background="@android:color/white"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/padding_left"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/retun1" />

        <TextView
            android:paddingLeft="-30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_white_bottom_line"
            android:gravity="center"
            android:text="请输入支付密码"
            android:textColor="@color/text333"
            android:textSize="@dimen/text_size_title_xl" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_white_linear_line"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:orientation="horizontal">



        <com.just.rebate.wedget.webview.PwdEditText
            android:id="@+id/pwdEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="numberPassword" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/padding_left"
            android:gravity="center_vertical|left"
            android:textColor="@color/text999"
            android:textSize="@dimen/text_size_content_ss"
            android:text="连续输错5次，支付密码将被锁定"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/text999"
            android:textSize="@dimen/text_size_content_ss"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/padding_right"
            android:text="忘记密码?"/>

    </LinearLayout>


</LinearLayout>
