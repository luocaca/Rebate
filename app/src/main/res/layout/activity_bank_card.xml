<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".ui.activity.BankCardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginTop="15dp"
            android:src="@mipmap/leftarrow" />

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/default_margin"
            android:gravity="center"
            android:text="银行卡"
            android:textColor="@color/text333"
            android:textSize="@dimen/text_size_title_xl" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/rv_list8"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

    </androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:drawableLeft="@mipmap/plus"
        android:paddingLeft="@dimen/padding_left"
        android:drawablePadding="5dp"
        android:text="添加银行卡"
        android:gravity="left|center_vertical"
        android:textSize="@dimen/text_size_title"
        android:textColor="@color/text333"
        android:background="@drawable/textview_border_dash_x"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        />


</LinearLayout>