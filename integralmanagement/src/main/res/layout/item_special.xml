<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/default_margin"
    android:layout_marginRight="@dimen/default_margin"
    android:layout_marginTop="@dimen/default_margin"
    android:background="@drawable/shape_corner_x"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/activitycolor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Img_activity"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp" />

        <TextView
            android:id="@+id/activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_title"
            android:layout_toEndOf="@+id/Img_activity"
            android:text="充值送礼" />

        <TextView
            android:id="@+id/activity_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_name"
            android:layout_marginStart="20dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/default_margin"
            android:textSize="@dimen/text_size_content"
            android:layout_toEndOf="@+id/Img_activity"
            android:text="充值满一千送一百" />

        <TextView
            android:id="@+id/activity_beganTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="17dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_content"
            android:layout_marginBottom="25dp"
            android:layout_toEndOf="@+id/Img_activity"
            android:text="2019-8-20" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="-90dp"
            android:adjustViewBounds="true"
            android:alpha="0.3"
            android:src="@mipmap/activity"
            android:tint="@android:color/white" />

    </RelativeLayout>

</LinearLayout>