<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:foreground="?attr/selectableItemBackground"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/DiscipleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/wode"
            android:drawablePadding="@dimen/padding_default"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_default"
            android:text="admin" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DiscipleName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:text="师傅:" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DiscipleName"
            android:layout_marginStart="50dp"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_toEndOf="@+id/Master"
            android:text="拜师时间" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:text="持有积分" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView9"
            android:layout_marginStart="50dp"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_toEndOf="@+id/HoldIntegral"
            android:text="贡献积分" />

        <TextView
            android:id="@+id/Master"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DiscipleName"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_toEndOf="@+id/textView7"
            android:text="admin1" />

        <TextView
            android:id="@+id/ApprenticeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DiscipleName"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_toEndOf="@+id/textView9"
            android:text="2019-10-15" />

        <TextView
            android:id="@+id/HoldIntegral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Master"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/textView11"
            android:text="4000" />

        <TextView
            android:id="@+id/ContributionIntegral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ApprenticeTime"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_toEndOf="@+id/textView13"
            android:text="200" />

        <ImageView
            android:id="@+id/ExPance"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="81dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginBottom="35dp"
            android:layout_toEndOf="@+id/ApprenticeTime"
            android:layout_marginLeft="@dimen/default_margin"
            android:src="@mipmap/rightarrow" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"/>
</LinearLayout>
